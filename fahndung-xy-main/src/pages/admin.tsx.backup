          )}

          {activeTab === "system" && (
            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
              <Card>
                <CardHeader>
                  <CardTitle>Datenbank</CardTitle>
                </CardHeader>
                <CardContent>
